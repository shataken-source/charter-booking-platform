# ===================================
# SUPABASE CONFIGURATION
# ===================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project.databasepad.com

# Public anon key (safe for client-side use)
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (NEVER expose in client code)
# Only use in server-side functions
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===================================
# OAUTH PROVIDERS (Optional)
# ===================================
# Configure in Supabase Dashboard > Authentication > Providers

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===================================
# EMAIL SERVICES (Optional)
# ===================================
# For transactional emails

# Mailjet
VITE_MAILJET_API_KEY=your_mailjet_api_key
VITE_MAILJET_SECRET_KEY=your_mailjet_secret_key

# ===================================
# ANALYTICS (Optional)
# ===================================
VITE_GA_TRACKING_ID=your_google_analytics_id

# ===================================
# DEPLOYMENT
# ===================================
# For CI/CD pipelines

# Vercel
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# Netlify
NETLIFY_AUTH_TOKEN=your_netlify_token
NETLIFY_SITE_ID=your_site_id

# ===================================
# SECURITY
# ===================================
# Session timeout in minutes (default: 30)
VITE_SESSION_TIMEOUT=30

# Enable 2FA requirement for admins
VITE_REQUIRE_2FA_ADMIN=true

# ===================================
# NOTES
# ===================================
# 1. Copy this file to .env for local development
# 2. Never commit .env to version control
# 3. Add secrets to GitHub Actions for CI/CD
# 4. Add to Vercel/Netlify dashboard for production
